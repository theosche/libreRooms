# ===========================================
# LibreRooms - Configuration
# ===========================================

APP_NAME=LibreRooms
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=

# Locale (fr, en, de, etc.)
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr

# ===========================================
# Database
# ===========================================
# Set to true after initial database configuration via /setup
DB_CONFIGURED=false

# Supported: sqlite, mysql, mariadb, pgsql
DB_CONNECTION=mariadb
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=librerooms
DB_USERNAME=librerooms
DB_PASSWORD=

# ===========================================
# Application Services
# ===========================================
SESSION_DRIVER=database
QUEUE_CONNECTION=database
CACHE_STORE=database

# ===========================================
# Development only (uncomment for local dev)
# ===========================================
# APP_ENV=local
# APP_DEBUG=true
# APP_URL=http://localhost
# LOG_LEVEL=debug

# Redirect all emails to this address (leave empty for production)
# MAIL_DEBUG_REDIRECT=dev@example.com
